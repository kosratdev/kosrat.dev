---
import CourseCategories from "./CourseCategories.astro";
import CourseLevels from "./CourseLevels.astro";
import Profile from "./Profile.astro";

interface Props {
	class?: string;
}

const className = Astro.props.class;
---
<div id="sidebar" class:list={[className, "w-full"]}>
    <div class="flex flex-col w-full gap-4 mb-4">
        <Profile></Profile>
    </div>
    <div id="sidebar-sticky" class="transition-all duration-700 flex flex-col w-full gap-4 top-4 sticky top-4">
        <CourseCategories class="onload-animation" style="animation-delay: 100ms"></CourseCategories>
        <CourseLevels class="onload-animation" style="animation-delay: 150ms"></CourseLevels>
    </div>
</div>
