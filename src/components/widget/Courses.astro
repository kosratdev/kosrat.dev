---
import { getCollection } from "astro:content";
import ButtonLink from "@components/control/ButtonLink.astro";
import WidgetLayout from "@components/widget/WidgetLayout.astro";
import I18nKey from "@i18n/i18nKey";
import { i18n } from "@i18n/translation";
import { getSortedCourses } from "@utils/content/course-utils";
import { getCourseUrlBySlug } from "@utils/url-utils";

const courses = await getSortedCourses();

const COLLAPSED_HEIGHT = "7.5rem";
const COLLAPSE_THRESHOLD = 5;

const isCollapsed = courses.length >= COLLAPSE_THRESHOLD;

interface Props {
	class?: string;
	style?: string;
}
const className = Astro.props.class;
const style = Astro.props.style;
---

{
	courses.length > 0 && (
		<WidgetLayout
			name={i18n(I18nKey.courses)}
			id="courses"
			isCollapsed={isCollapsed}
			collapsedHeight={COLLAPSED_HEIGHT}
			class={className}
			style={style}
		>
			{courses.map((course) => (
				<ButtonLink
					url={getCourseUrlBySlug(course.slug)}
					label={`View the ${course.data.title} course`}
				>
					{course.data.title}
				</ButtonLink>
			))}
		</WidgetLayout>
	)
}
