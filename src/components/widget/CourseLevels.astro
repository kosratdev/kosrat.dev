---
import I18nKey from "../../i18n/i18nKey";
import { i18n } from "../../i18n/translation";
import { getCourseLevelList } from "../../utils/content-utils";
import ButtonLink from "../control/ButtonLink.astro";
import WidgetLayout from "./WidgetLayout.astro";

const levels = await getCourseLevelList();

const COLLAPSED_HEIGHT = "7.5rem";
const COLLAPSE_THRESHOLD = 5;

const isCollapsed = levels.length >= COLLAPSE_THRESHOLD;

interface Props {
	class?: string;
	style?: string;
}
const className = Astro.props.class;
const style = Astro.props.style;
---

<WidgetLayout name="Levels" id="course-levels" isCollapsed={isCollapsed} collapsedHeight={COLLAPSED_HEIGHT}
                class={className} style={style}
>
    {levels.map((l) =>
        <ButtonLink
            url={l.url}
            badge={String(l.count)}
            label={`View all ${l.name.trim()} level courses`}
        >
            {l.name.trim()}
        </ButtonLink>
    )}
</WidgetLayout>
